# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mypc-production?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/mypc-test?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-mobile-app-domain.com,https://your-web-app-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Amazon Affiliate API (for backend processing)
AMAZON_AFFILIATE_TAG=your-affiliate-tag
AMAZON_PA_API_ACCESS_KEY=your-access-key
AMAZON_PA_API_SECRET_KEY=your-secret-key

# Flipkart Affiliate API (for backend processing)
FLIPKART_AFFILIATE_ID=your-affiliate-id
FLIPKART_AFFILIATE_TOKEN=your-affiliate-token

# Other API Keys (if needed)
# REDIS_URL=redis://localhost:6379
# SENDGRID_API_KEY=your-sendgrid-api-key
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
